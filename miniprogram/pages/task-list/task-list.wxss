/** 按钮样式 **/
.add {
  position: fixed;
  width: 450rpx;
  height: 300rpx;
  left: 620rpx;
  top: 75%;
  margin-left: -200rpx;
  border-radius: 100rpx;
}

.add-item, .add-icon {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #6bb8ff;
  border-radius: 100rpx;
  color: #fff;
  width: 100rpx;
  height: 100rpx;
}

.add-item {
  margin-left: -60rpx;  
  width: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
  transition: transform 0.3s cubic-bezier(0.42, 0, 0.58, 1), -webkit-transform 0.3s cubic-bezier(0.42, 0, 0.58, 1);
}

.add-icon {
  margin-left: -60rpx; 
  width: 100rpx;
  height: 100rpx;
  font-size: 80rpx;
  border-radius: 100rpx;
}

.add-icon-txt {
  margin-top: -10rpx;
}

.active .add-item:nth-of-type(1) {
  transform: rotate(10deg) translateX(-140rpx);
}

.active .add-item:nth-of-type(1) .add-item-txt {
  transform: rotate(-10deg);
}

.active .add-item:nth-of-type(2) {
  transform: rotate(90deg) translateX(-140rpx);
}

.active .add-item:nth-of-type(2) .add-item-txt {
  transform: rotate(-90deg);
}

.active .add-item:nth-of-type(3) {
  transform: rotate(170deg) translateX(-140rpx);
}

.active .add-item:nth-of-type(3) .add-item-txt {
  transform: rotate(-170deg);
}