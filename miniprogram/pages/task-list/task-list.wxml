<!--pages/detail-task/detal-task.wxml-->
<view wx:for="{{team}}">
<view class='box_top'>
<view>
<view class='text_teamname'>{{team.name}}</view>
<view class='text_number'>{{team.userNum}}人</view>
<view class='buttom2'>
<navigator url='/pages/member-list/member-list'><view class='buttom_team' >成员</view></navigator>
</view>
<view class='buttom'>
<view class='buttom_text'>任务</view>
</view>
<view class='text_intro'>{{team.introduce}}</view>
<image src='/images/pen.svg' class='icon_pen'></image>
</view>
</view>
</view>

<view wx:for="{{task}}" wx:for-index="num" wx:for-item="tags" >
<view class='back' style='position:relative;top:320rpx;'  id="{{tags._id}}"  catchtap="catchTheID">
<view class="{{(uhide==tags._id)?'box_a':'box_b'}}" style='top:20rpx;' >
<view class='box_card' style='background-color:#ffeb3b;'></view>
<view class="{{(uhide==tags._id)?'hide':'show'}}">
<image src='/images/down.png' class='hide_icon' ></image>
</view>
<view class="{{(uhide==tags._id)?'show':'hide'}}">
<image src='/images/up.png' class='hide_icon'  ></image>
</view>
<view class='text_taskname'>{{tags.name}}</view>
<!-- <view wx:for="{{task}}" wx:for-index="number" wx:for-item="tag" > -->
<view class="hide{{( uhide==tags._id)?'show':''}}">
<view class='text_title1'>任务进行时间</view>
<!-- <view class='text_title1' style='left:450rpx'>所属团队</view> -->
<view class='text_title2'>{{tags.endTime}}</view>
<!-- <view class='text_title2' style='left:450rpx;'>{{tags.team}}</view> -->
<!-- </view> -->
</view>
</view>
</view>
</view>






