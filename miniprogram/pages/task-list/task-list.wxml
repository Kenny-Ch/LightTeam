<!--pages/detail-task/detal-task.wxml-->



<view class='box_top'>


  <view>
    <view class='text_teamname'>{{teamName}}</view>
    <view class='text_number'>{{memberNum}}人</view>
    <view class='buttom2' bindtap='bindMemberList'>
      <view class='buttom_team'>成员</view>
    </view>
    <view class='buttom'>
      <view class='buttom_text'>任务</view>
    </view>
    <view class='text_intro'>{{teamIntroduce}}</view>
    <image src='/images/pen.svg' class='icon_pen'></image>
  </view>
</view>



<view class='back' style='position:relative;top:320rpx;'>
  <view class="{{showView?'box_a':'box_b'}}" style='top:20rpx;' wx:for="{{task}}" bindlongtap='longtapDelete' id="{{index}}">
    <view class='text_taskname'>{{item.name}}</view>
    <view class='box_card' style='background-color:#ffeb3b;'></view>
    <view class="{{showView?'hide':'show'}}">
      <image src='/images/down.png' class='hide_icon' bindtap='onChangeShowState'></image>
    </view>
    <view class="{{showView?'show':'hide'}}">
      <image src='/images/up.png' class='hide_icon' bindtap='onChangeShowState'></image>
    </view>
    <view class="hide{{showView?'show':''}}">
      <view class='text_title1'>任务进行时间</view>
      <view class='text_title1' style='left:450rpx'>所属团队</view>
      <view class='text_title2'>{{item.startDate}} {{item.startTime}}——{{item.endDate}} {{item.endTime}}</view>
      <view class='text_title2' style='left:450rpx;'>{{teamName}}</view>
    </view>
  </view>
</view>